<%= simple_form_for(@station) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :addressNumber %>
    <%= f.input :zipCode %>
    <%= f.input :districtCode %>
    <%= f.input :districtName %>
    <%= f.input :location %>
    <%= f.input :stationType %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
