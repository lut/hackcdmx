<h1>Listing trips</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Bike</th>
      <th>Date removed</th>
      <th>Station removed</th>
      <th>Date arrived</th>
      <th>Station arrived</th>
      <th>Action</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.customer_id %></td>
        <td><%= trip.bike_id %></td>
        <td><%= trip.date_removed %></td>
        <td><%= trip.station_removed %></td>
        <td><%= trip.date_arrived %></td>
        <td><%= trip.station_arrived %></td>
        <td><%= trip.action %></td>
        <td><%= link_to 'Show', trip %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
        <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

